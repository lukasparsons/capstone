@page
@model CapstoneIMS.Web.Pages.NotificationsModel
@{
    ViewData["Title"] = "Notifications";
}

<div class="row">
    <h2>Notifications</h2>
</div>
<div class="row" style="height: 500px; overflow:auto;">
    <form method="post">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Delete?</th>
                </tr>
            </thead>
            @foreach (var notification in Model.Notifications)
            {

                <tr>
                    <th>@notification.Subject</th>
                    <th>@notification.Message</th>
                    <th><button class="btn btn-danger" formmethod="post" asp-page-handler="Delete" type="submit" asp-route-idString="@notification.Id">Delete</button></th>
                </tr>
            }

        </table>
    </form>
</div>