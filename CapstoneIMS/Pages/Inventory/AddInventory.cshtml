@page
@model CapstoneIMS.Web.Pages.AddInventoryModel
@{
    ViewData["Title"] = "AddInventory";
}

<h2>New Item</h2>
<p><a asp-page="Index">Back to Inventory</a></p>
<div>
    <form method="post">
        <div class="form-group">
            <label for="itemName">Item Name</label>
            <input type="search" class="form-control" id="itemName" name="itemName" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="sku">SKU</label>
            <input type="number" class="form-control" id="sku" name="sku" placeholder="SKU">
        </div>
        <div class="form-group">
            <label for="productType">Type:</label>
            <input type="text" class="form-control" id="productType" name="productType" />
        </div>
        <div class="form-group">
            <label for="msrp">Price by default:</label>
            <input type="number" step="0.01" min="0" id="msrp" name="msrp" />
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>