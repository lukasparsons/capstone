@page
@model CapstoneIMS.Web.Pages.AddInventoryModel
@{
    ViewData["Title"] = "AddInventory";
}
<div class="row">
    <div class="col-md-12 text-center">
        <h2>New Item</h2>
        <p><a asp-page="Index">Back to Inventory</a></p>
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form method="post" autocomplete="off">
            <div class="form-group">
                <label for="itemName">Item Name</label>
                <input type="text" class="form-control" id="itemName" name="itemName" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="productType">Type:</label>
                <select class="form-control" name="productType" id="productType">
                    <option>Game</option>
                    <option>Console</option>
                    <option>Accessory</option>
                    <option>Collectible</option>
                    <option>Clothing</option>
                    <option>Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="msrp">Price by default:</label>
                <input type="number" step="0.01" min="0" id="msrp" name="msrp" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>